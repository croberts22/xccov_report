<p id="notice"><%= notice %></p>

<h1>Coverage Reports</h1>

<table>
  <thead>
    <tr>
      <th>Covered lines</th>
      <th>Line coverage</th>
      <th>Coverage targets</th>
      <th>Executable lines</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coverage_reports.each do |coverage_report| %>
      <tr>
        <td><%= coverage_report.covered_lines %></td>
        <td><%= coverage_report.line_coverage %></td>
        <td><%= coverage_report.coverage_targets %></td>
        <td><%= coverage_report.executable_lines %></td>
        <td><%= link_to 'Show', coverage_report %></td>
        <td><%= link_to 'Edit', edit_coverage_report_path(coverage_report) %></td>
        <td><%= link_to 'Destroy', coverage_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coverage Report', new_coverage_report_path %>
